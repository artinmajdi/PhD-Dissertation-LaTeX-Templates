%%%%%%%%%%%%%%%%
% Requirements %
%%%%%%%%%%%%%%%%

\RequirePackage{amsthm}
\RequirePackage{thmtools}
\RequirePackage[framemethod=TikZ]{mdframed}

%%%%%%%%%%%%
% Settings %
%%%%%%%%%%%%

% Setup
\define@key{thmdef}{mdthm}[{}]{
    \thmt@trytwice{\def\thmt@theoremdefiner{\mdtheorem[#1]}}{}
}

% Framed environments

\mdfdefinestyle{thicc}{
    nobreak=true,
    skipabove=\topskip,
    skipbelow=\topskip,
    innerleftmargin=0.5em,
    innerrightmargin=0.5em,
    innerbottommargin=0.5em,
    innertopmargin=0.5em,
    linewidth=0.25em,
    roundcorner=0.15em,
    linecolor=black!10,
    frametitlebackgroundcolor=black!10,
    theoremseparator={.}
}

\def\lgmeth{Method}

\declaretheorem[mdthm={style=thicc, nobreak=false, linecolor=mygreen, frametitlebackgroundcolor=mygreen}, name=\lgmeth]{framedmeth}

\newcommand{\myframedmeth}[3]{
    \setcounter{framedmeth}{\numexpr#1-1\relax}
    \begin{framedmeth}[#2]
    #3
    \end{framedmeth}
}

\ProcessOptions\relax

